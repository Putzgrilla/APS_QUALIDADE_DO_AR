<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#667eea"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- CabeÃ§alho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/icone_ar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titulo_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualidade do Ar"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitulo_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitoramento em tempo real"
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Card Principal -->
        <LinearLayout
            android:id="@+id/cartao_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/icone_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    android:tint="#2196F3"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Obtendo localizaÃ§Ã£o..."
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

            <!-- Divisor -->
            <View
                android:id="@+id/divisor_principal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5"
                android:layout_marginVertical="16dp" />

            <!-- InformaÃ§Ãµes de LocalizaÃ§Ã£o -->
            <LinearLayout
                android:id="@+id/secao_localizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/icone_localizacao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    android:tint="#4CAF50"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/texto_localizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coordenadas obtidas"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Cards de MediÃ§Ãµes -->
        <LinearLayout
            android:id="@+id/container_medicoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <!-- Card PM10 -->
            <LinearLayout
                android:id="@+id/cartao_pm10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:background="#E3F2FD"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/rotulo_pm10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM10"
                    android:textColor="#1976D2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/valor_pm10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#1976D2"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/unidade_pm10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Î¼g/mÂ³"
                    android:textColor="#64B5F6"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Card PM2.5 -->
            <LinearLayout
                android:id="@+id/cartao_pm25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="#F3E5F5"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/rotulo_pm25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM2.5"
                    android:textColor="#7B1FA2"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/valor_pm25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#7B1FA2"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/unidade_pm25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Î¼g/mÂ³"
                    android:textColor="#BA68C8"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Card de AvaliaÃ§Ã£o -->
        <LinearLayout
            android:id="@+id/cartao_avaliacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/titulo_avaliacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š AvaliaÃ§Ã£o da Qualidade"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/avaliacao_pm10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM10: --"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/avaliacao_pm25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM2.5: --"
                    android:textColor="#757575"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- BotÃ£o de Atualizar -->
        <Button
            android:id="@+id/botao_atualizar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ”„ Atualizar Dados"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#667eea"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- RodapÃ© -->
        <TextView
            android:id="@+id/rodape_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dados fornecidos pela Open-Meteo Air Quality API\nÃšltima atualizaÃ§Ã£o: --"
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>